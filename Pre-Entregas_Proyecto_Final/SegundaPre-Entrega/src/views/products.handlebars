<h1>Productos</h1>
<div class="card-container">
  {{#each productos}}
    <div class="card">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      <h3>Price: ${{price}}</h3>
      <h4>Thumbnail: {{thumbnail}}</h4>
      <button>Agregar al Carrito!</button>
    </div>
  {{/each}}
</div>

<div class="pagination">
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}">Anterior</a>
  {{/if}}
  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}">Siguiente</a>
  {{/if}}
  <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
</div>